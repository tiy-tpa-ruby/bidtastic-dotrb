<%= form_for(@item, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="fmtxt">

  <%# name %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>


  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>


  <%# category %>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category, Item.categories.map { |category| [category, category] } %>
    </div>
  </div>


  <%# minimum_bid %>
  <div class="form-group">
    <%= f.label :minimum_bid, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :minimum_bid, class: "form-control" %>
    </div>
  </div>


  <%# bid_increment %>
  <div class="form-group">
    <%= f.label :bid_increment, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :bid_increment, class: "form-control" %>
    </div>
  </div>


  <%# image_data %>
  <div class="form-group">
    <%= f.label :image_data, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.hidden_field :image, value: @item.cached_image_data %>
      <%= f.file_field :image %>

    </div>
  </div>

</div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end -%>
